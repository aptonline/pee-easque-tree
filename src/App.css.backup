:root {
  font-family: Inter, Avenir, Helvetica, Arial, sans-serif;
  font-size: 16px;
  line-height: 24px;
  font-weight: 400;
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-text-size-adjust: 100%;

  /* Default theme color (Classic Blue) */
  --theme-color: #00C8FF;
  --theme-color-rgb: 0, 200, 255;
}

html,
body {
  overscroll-behavior: none;
  overflow: hidden;
  position: fixed;
  width: 100%;
  height: 100%;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  user-select: none;
  -webkit-user-select: none;
  overscroll-behavior: none;
}

input,
textarea {
  user-select: text;
  -webkit-user-select: text;
}

.app {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
  color: #fff;
  overflow: hidden;
  overscroll-behavior: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  padding: 1.5rem 2rem;
  box-shadow: 0 2px 20px rgba(var(--theme-color-rgb), 0.3);
  z-index: 100;
  border-bottom: 1px solid rgba(var(--theme-color-rgb), 0.3);
  position: relative;
  overflow: hidden;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
  position: relative;
  z-index: 1;
}

.header-brand {
  display: flex;
  align-items: center;
  gap: 1rem;
  position: relative;
  z-index: 2;
}

.header-logo {
  width: 48px;
  height: 48px;
  object-fit: contain;
}

.header-titles {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

header h1 {
  margin: 0;
  font-size: 1.8rem;
  font-weight: 600;
  line-height: 1.2;
}

header h3 {
  margin: 0;
  font-size: 1rem;
  font-weight: 400;
  opacity: 0.9;
  line-height: 1.2;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  position: relative;
  z-index: 1;
}

.header-search {
  position: relative;
  z-index: 1;
}

.search-form {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.header-search-input {
  flex: 1;
  padding: 0.75rem;
  border: 2px solid rgba(var(--theme-color-rgb), 0.3);
  border-radius: 8px;
  font-size: 1rem;
  background: rgba(0, 0, 0, 0.5);
  color: #e0e0e0;
  transition: all 0.2s;
}

.header-search-input:focus {
  outline: none;
  border-color: var(--theme-color);
  box-shadow: 0 0 10px rgba(var(--theme-color-rgb), 0.5);
  background: rgba(0, 0, 0, 0.7);
}

.header-search-btn {
  padding: 0.75rem 1.5rem;
  background: var(--theme-color);
  color: white;
  border: 1px solid rgba(var(--theme-color-rgb), 0.5);
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  box-shadow: 0 2px 10px rgba(var(--theme-color-rgb), 0.3);
  white-space: nowrap;
}

.header-search-btn:hover:not(:disabled) {
  filter: brightness(1.2);
  box-shadow: 0 4px 15px rgba(var(--theme-color-rgb), 0.5);
  transform: translateY(-1px);
}

.header-search-btn:disabled {
  background: rgba(80, 80, 80, 0.5);
  cursor: not-allowed;
  border-color: rgba(80, 80, 80, 0.5);
  box-shadow: none;
}

.header-hint {
  font-size: 0.85rem;
  color: #a0a0a0;
  margin: 0;
  white-space: nowrap;
}

.header-hint a {
  color: var(--theme-color);
  text-decoration: none;
}

.header-hint a:hover {
  text-decoration: underline;
  text-shadow: 0 0 5px rgba(var(--theme-color-rgb), 0.5);
}

.server-status {
  font-size: 0.9rem;
}

.settings-icon-btn {
  background: rgba(var(--theme-color-rgb), 0.1);
  border: 2px solid rgba(var(--theme-color-rgb), 0.3);
  padding: 0.5rem;
  border-radius: 8px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  color: var(--theme-color);
}

.settings-icon-btn:hover {
  background: rgba(var(--theme-color-rgb), 0.2);
  border-color: rgba(var(--theme-color-rgb), 0.5);
  box-shadow: 0 0 10px rgba(var(--theme-color-rgb), 0.3);
}

.server-status .online {
  color: #00ff41;
  font-weight: 600;
  text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
}

.server-status .offline {
  color: #ff0050;
  font-weight: 600;
  text-shadow: 0 0 5px rgba(255, 0, 80, 0.5);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  margin-top: 2rem;
  padding: 2rem;
  padding-top: 2rem;
  padding-bottom: 2rem;
  height: calc(100vh - 2rem);
  overflow-y: auto;
  overflow-x: hidden;
  overscroll-behavior: none;
  -webkit-overflow-scrolling: touch;
  position: relative;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 300px;
  color: #a0a0a0;
  font-size: 1.2rem;
  text-align: center;
}

.did-you-know {
  color: var(--theme-color);
  font-size: 1rem;
  font-style: italic;
  margin-bottom: 1.5rem;
  text-shadow: 0 0 5px rgba(var(--theme-color-rgb), 0.3);
}

section {
  background: rgba(20, 20, 20, 0.85);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(var(--theme-color-rgb), 0.2);
  border-radius: 12px;
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  color: #e0e0e0;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5), 0 0 10px rgba(var(--theme-color-rgb), 0.1);
}

section h2 {
  margin-top: 0;
  margin-bottom: 1rem;
  color: var(--theme-color);
  font-size: 1.4rem;
  text-shadow: 0 0 10px rgba(var(--theme-color-rgb), 0.3);
}

.settings-section .setting-row {
  margin-bottom: 1rem;
}

.settings-section .setting-row:last-child {
  margin-bottom: 0;
}

.settings-section label {
  display: block;
  font-weight: 500;
  margin-bottom: 0.5rem;
  color: #555;
}

.path-selector {
  display: flex;
  gap: 0.5rem;
}

.path-selector input {
  flex: 1;
}

.search-input-group {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
}

.search-input-group input {
  flex: 1;
}

input[type="text"] {
  padding: 0.75rem;
  border: 2px solid rgba(var(--theme-color-rgb), 0.3);
  border-radius: 8px;
  font-size: 1rem;
  background: rgba(0, 0, 0, 0.5);
  color: #e0e0e0;
  transition: all 0.2s;
}

input[type="text"]:focus {
  outline: none;
  border-color: var(--theme-color);
  box-shadow: 0 0 10px rgba(var(--theme-color-rgb), 0.5);
  background: rgba(0, 0, 0, 0.7);
}

input[type="checkbox"] {
  margin-right: 0.5rem;
  cursor: pointer;
}

button {
  padding: 0.75rem 1.5rem;
  background: var(--theme-color);
  color: white;
  border: 1px solid rgba(var(--theme-color-rgb), 0.5);
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  box-shadow: 0 2px 10px rgba(var(--theme-color-rgb), 0.3);
}

button:hover:not(:disabled) {
  filter: brightness(1.2);
  box-shadow: 0 4px 15px rgba(var(--theme-color-rgb), 0.5);
  transform: translateY(-1px);
}

button:disabled {
  background: rgba(80, 80, 80, 0.5);
  cursor: not-allowed;
  border-color: rgba(80, 80, 80, 0.5);
  box-shadow: none;
}

.hint {
  font-size: 0.9rem;
  color: #a0a0a0;
  margin: 0;
}

.hint a {
  color: var(--theme-color);
  text-decoration: none;
}

.hint a:hover {
  text-decoration: underline;
  text-shadow: 0 0 5px rgba(var(--theme-color-rgb), 0.5);
}

.error {
  background: rgba(255, 0, 80, 0.1);
  color: #ff0050;
  padding: 1rem;
  border-radius: 8px;
  margin-bottom: 1.5rem;
  border: 1px solid rgba(255, 0, 80, 0.3);
  box-shadow: 0 0 10px rgba(255, 0, 80, 0.2);
}

.no-results {
  color: #a0a0a0;
  text-align: center;
  padding: 2rem;
}

.updates-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.update-card {
  border: 2px solid rgba(var(--theme-color-rgb), 0.2);
  border-radius: 8px;
  padding: 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.2s;
  background: rgba(0, 0, 0, 0.3);
}

.update-card:hover {
  border-color: rgba(var(--theme-color-rgb), 0.5);
  box-shadow: 0 0 15px rgba(var(--theme-color-rgb), 0.2);
  transform: translateY(-2px);
}

.update-info {
  flex: 1;
}

.update-version {
  font-size: 1.2rem;
  margin-bottom: 0.5rem;
  color: var(--theme-color);
  text-shadow: 0 0 5px rgba(var(--theme-color-rgb), 0.3);
}

.update-detail {
  font-size: 0.9rem;
  margin-bottom: 0.25rem;
  color: #c0c0c0;
}

.update-detail.sha {
  word-break: break-all;
}

.update-detail code {
  font-family: monospace;
  font-size: 0.85rem;
  background: rgba(0, 0, 0, 0.5);
  color: #00ff41;
  padding: 0.2rem 0.4rem;
  border-radius: 4px;
  border: 1px solid rgba(0, 255, 65, 0.2);
}

.download-btn {
  padding: 0.6rem 1.2rem;
  background: linear-gradient(135deg, #00ff41 0%, #00b830 100%);
  color: #000;
  white-space: nowrap;
  font-weight: 600;
  border-color: rgba(0, 255, 65, 0.5);
  box-shadow: 0 2px 10px rgba(0, 255, 65, 0.3);
}

.download-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, #00ff51 0%, #00c840 100%);
  box-shadow: 0 4px 15px rgba(0, 255, 65, 0.5);
}

.downloads-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.downloads-header h2 {
  margin: 0;
}

.clear-btn {
  padding: 0.5rem 1rem;
  font-size: 0.9rem;
  background: linear-gradient(135deg, #ff0050 0%, #c00040 100%);
  border-color: rgba(255, 0, 80, 0.5);
  box-shadow: 0 2px 10px rgba(255, 0, 80, 0.3);
}

.clear-btn:hover {
  background: linear-gradient(135deg, #ff1060 0%, #d00050 100%);
  box-shadow: 0 4px 15px rgba(255, 0, 80, 0.5);
}

.downloads-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.download-item {
  border: 2px solid rgba(var(--theme-color-rgb), 0.2);
  border-radius: 8px;
  padding: 1rem;
  background: rgba(0, 0, 0, 0.3);
}

.download-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.download-name {
  font-weight: 600;
  color: #e0e0e0;
  flex: 1;
}

.cancel-download-btn {
  background: linear-gradient(135deg, #ff0050 0%, #c00040 100%);
  color: white;
  border: 1px solid rgba(255, 0, 80, 0.5);
  border-radius: 50%;
  width: 28px;
  height: 28px;
  padding: 0;
  font-size: 1.2rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  box-shadow: 0 2px 10px rgba(255, 0, 80, 0.3);
}

.cancel-download-btn:hover {
  background: linear-gradient(135deg, #ff1060 0%, #d00050 100%);
  box-shadow: 0 4px 15px rgba(255, 0, 80, 0.5);
}

.progress-bar {
  width: 100%;
  height: 24px;
  background: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(var(--theme-color-rgb), 0.2);
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.progress-fill {
  height: 100%;
  background: var(--theme-color);
  box-shadow: 0 0 10px rgba(var(--theme-color-rgb), 0.5);
  transition: width 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 8px;
}

.download-stats {
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
  color: #c0c0c0;
}

.download-stats .error {
  color: #ff0050;
  background: none;
  padding: 0;
  border: none;
  margin: 0;
  text-shadow: 0 0 5px rgba(255, 0, 80, 0.5);
}

.download-stats .success {
  color: #00ff41;
  font-weight: 600;
  text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
}

/* Modal styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.modal-content {
  background: rgba(20, 20, 20, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 2px solid rgba(var(--theme-color-rgb), 0.3);
  border-radius: 12px;
  width: 90%;
  max-width: 600px;
  max-height: 80vh;
  overflow: auto;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.7), 0 0 20px rgba(var(--theme-color-rgb), 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 2px solid rgba(var(--theme-color-rgb), 0.2);
}

.modal-header h2 {
  margin: 0;
  color: var(--theme-color);
  font-size: 1.5rem;
  text-shadow: 0 0 10px rgba(var(--theme-color-rgb), 0.3);
}

.close-btn {
  background: transparent;
  border: 1px solid rgba(var(--theme-color-rgb), 0.3);
  font-size: 2rem;
  line-height: 1;
  color: var(--theme-color);
  cursor: pointer;
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 4px;
  transition: all 0.2s;
}

.close-btn:hover {
  background: rgba(var(--theme-color-rgb), 0.2);
  box-shadow: 0 0 10px rgba(var(--theme-color-rgb), 0.3);
}

.modal-body {
  padding: 1.5rem;
}

.setting-hint {
  font-size: 0.85rem;
  color: #a0a0a0;
  margin-top: 0.5rem;
  font-style: italic;
}

.settings-section .setting-row {
  margin-bottom: 1rem;
}

.settings-section .setting-row:last-child {
  margin-bottom: 0;
}

.settings-section label {
  display: block;
  font-weight: 500;
  margin-bottom: 0.5rem;
  color: #e0e0e0;
}

/* Theme Selector */
.theme-selector {
  display: flex;
  gap: 0.5rem;
  margin-top: 0.5rem;
}

.theme-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem;
  background: rgba(0, 0, 0, 0.3);
  border: 2px solid rgba(80, 80, 80, 0.5);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s;
}

.theme-btn:hover {
  background: rgba(0, 0, 0, 0.5);
  transform: scale(1.1);
}

.theme-btn.active {
  border-width: 3px;
  box-shadow: 0 0 12px currentColor;
  background: rgba(0, 0, 0, 0.6);
}

.theme-color-preview {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  box-shadow: 0 0 8px currentColor;
}

/* Floating download bar at bottom */
.floating-downloads {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-top: 2px solid rgba(var(--theme-color-rgb), 0.3);
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.5), 0 0 20px rgba(var(--theme-color-rgb), 0.2);
  z-index: 200;
  max-height: 200px;
  overflow-y: auto;
  overscroll-behavior: none;
}

.floating-download-item {
  position: relative;
  padding: 0.75rem 3rem 0.75rem 1rem;
  border-bottom: 1px solid rgba(var(--theme-color-rgb), 0.1);
}

.floating-download-item:last-child {
  border-bottom: none;
}

.floating-download-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
  gap: 1rem;
}

.floating-download-name {
  color: #e0e0e0;
  font-weight: 500;
  font-size: 0.9rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

.floating-download-stats {
  color: #a0a0a0;
  font-size: 0.85rem;
  white-space: nowrap;
}

.floating-download-stats .error {
  color: #ff0050;
  text-shadow: 0 0 5px rgba(255, 0, 80, 0.5);
}

.floating-download-stats .success {
  color: #00ff41;
  text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
}

.floating-progress-bar {
  width: 100%;
  height: 4px;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 2px;
  overflow: hidden;
}

.floating-progress-fill {
  height: 100%;
  background: var(--theme-color);
  box-shadow: 0 0 8px rgba(var(--theme-color-rgb), 0.6);
  transition: width 0.3s ease;
}

.floating-cancel-btn,
.floating-close-btn {
  position: absolute;
  right: 0.75rem;
  top: 50%;
  transform: translateY(-50%);
  background: linear-gradient(135deg, #ff0050 0%, #c00040 100%);
  color: white;
  border: 1px solid rgba(255, 0, 80, 0.5);
  border-radius: 50%;
  width: 24px;
  height: 24px;
  padding: 0;
  font-size: 1rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  box-shadow: 0 2px 8px rgba(255, 0, 80, 0.3);
}

.floating-close-btn {
  background: linear-gradient(135deg, var(--theme-color) 0%, #0051D5 100%);
  border-color: rgba(var(--theme-color-rgb), 0.5);
  box-shadow: 0 2px 8px rgba(var(--theme-color-rgb), 0.3);
}

.floating-cancel-btn:hover {
  background: linear-gradient(135deg, #ff1060 0%, #d00050 100%);
  box-shadow: 0 4px 12px rgba(255, 0, 80, 0.5);
}

.floating-close-btn:hover {
  background: linear-gradient(135deg, #0085FF 0%, #0061E5 100%);
  box-shadow: 0 4px 12px rgba(var(--theme-color-rgb), 0.5);
}

@media (max-width: 768px) {
  .header-top {
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }

  .header-brand {
    gap: 0.75rem;
  }

  .header-logo {
    width: 40px;
    height: 40px;
  }

  .header-titles h1 {
    font-size: 1.5rem;
  }

  .header-titles h3 {
    font-size: 0.9rem;
  }

  .header-right {
    gap: 0.75rem;
    width: 100%;
    justify-content: space-between;
  }

  .server-status {
    font-size: 0.8rem;
  }

  .search-form {
    flex-direction: column;
  }

  .header-search-btn {
    width: 100%;
  }

  .update-card {
    flex-direction: column;
    align-items: flex-start;
  }

  .download-btn {
    width: 100%;
    margin-top: 1rem;
  }

  .path-selector {
    flex-direction: column;
  }

  .search-input-group {
    flex-direction: column;
  }

  .modal-content {
    width: 95%;
    max-height: 90vh;
  }
}
